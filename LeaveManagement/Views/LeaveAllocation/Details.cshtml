    </dl>
</div>
<hr />
<h2>Leave Allocations</h2>

    <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.LeaveAllocations)
            {
            <li class="list-group-item">
                <h6>@item.LeaveType.Name <span class="badge badge-secondary">@item.NumberOfDays</span> | <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Id"><i class="fa fa-pencile"></i>Edit</a></h6>
            </li>

            }
        </ul>
    </div>
    <div>
        <a asp-action="ListEmployees" class="btn btn-outline-secondary btn-block">Back to List</a>
    </div>
