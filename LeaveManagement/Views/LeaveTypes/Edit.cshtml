@model LeaveManagement.Models.LeaveTypeVM

@{
    ViewData["Title"] = "Edit";   
}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-info card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i>
                        Add Leave Type
                    </h3>
                </div>
                <form asp-action="Edit">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="DateCreated" type="hidden" />
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DefaultDays" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="DefaultDays" class="form-control" />
                                <span asp-validation-for="DefaultDays" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer clearfix center">
                        <input type="submit" value="Create" class="btn bg-gradient-primary float-right" />
                        <a asp-action="Index" class="btn bg-gradient-secondary float-right" style="margin-right: 5px;">Cancel</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
